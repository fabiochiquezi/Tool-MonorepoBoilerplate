{
  "name": "boilerplate-dash-api",
  "description": "Simple project about authentication with JWT using Node + Typescript",
  "repository": {
    "url": "https://github.com/fabiochiquezi/Project-SimpleAuthJWT"
  },
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "email": "fabiochiquezi@gmail.com",
    "name": "FÃ¡bio Chiquezi",
    "url": "https://github.com/fabiochiquezi"
  },
  "main": "src/app.ts",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "NODE_ENV=test jest --runInBand --watch",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand",
    "start": "node dist/app.js",
    "build": "rimraf dist && npx tsc --build tsconfig.prod.json",
    "bundle": "ts-project-bundle",
    "dev": "NODE_ENV=dev ts-node-dev src/app.ts",
    "dev2": "NODE_ENV=dev nodemon -L --exec ts-node src/app.ts",
    "down": "docker-compose down",
    "up": "yarn build && docker-compose up",
    "watch": "tsc -w",
    "debug": "NODE_ENV=dev nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/app.js"
  },
  "dependencies": {
    "configs-back": "1.0.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "express-validator": "^6.14.1",
    "mongoose": "^6.3.4",
    "nodemon": "^2.0.16"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "axios": "^0.27.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.8.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "16.x"
  }
}
