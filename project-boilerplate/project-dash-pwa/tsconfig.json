{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
        "app/*": ["elements/app/*"],
        "components/*": ["elements/components/*"],
        "types/*": ["elements/types/*"],
        "helpers/*": ["general/helpers/*"],
        "config/*": ["general/config/*"],
        "services/*": ["services/*"],

        "src/*": ["src/*"],
        "srcConfig/*": ["src/config/*"],
        "srcComponents/*": ["src/components/*"]
    },
  },
  "include": [
      "next-env.d.ts",

      "src/pages/_document.js",
      "src/**/*.ts",
      "src/**/*.tsx",

      "elements/**/*.ts",
      "elements/**/*.tsx",

      "general/**/*.ts",
      "general/**/*.tsx",

      "services/**/*.ts"
  ],
  "exclude": ["node_modules", "helpers/tests/*"]
}