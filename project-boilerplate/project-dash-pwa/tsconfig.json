{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
        "app/*": ["elements/app/*"],
        "components/*": ["elements/components/*"],
        "types/*": ["elements/types/*"],
        "pages/*": ["pages/*"],
    },
  },
  "include": [
      "next-env.d.ts",
      "pages/_document.js",
      "pages/**/*.ts",
      "pages/**/*.tsx",
      "firebase-auth.ts",

      "elements/**/*.ts",
      "elements/**/*.tsx",
  ],
  "exclude": ["node_modules", "helpers/tests/*"]
}